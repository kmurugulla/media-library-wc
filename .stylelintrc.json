{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "color-function-notation": "modern",
    "alpha-value-notation": "number",
    "hue-degree-notation": "number",
    "custom-property-pattern": "^ml-[a-z][a-z0-9-]*$",
    "custom-property-empty-line-before": [
      "always",
      {
        "except": ["after-custom-property", "first-nested"],
        "ignore": ["after-comment", "inside-single-line-block"]
      }
    ],
    "selector-class-pattern": [
      "^[a-z][a-z0-9-]*$",
      {
        "message": "Expected class selector to be kebab-case"
      }
    ],
    "selector-id-pattern": [
      "^[a-z][a-z0-9-]*$",
      {
        "message": "Expected id selector to be kebab-case"
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["layer", "supports"]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["layer", "supports"]
      }
    ],
    "scss/dollar-variable-pattern": "^ml-[a-z][a-z0-9-]*$",
    "order/properties-alphabetical-order": true,
    "declaration-empty-line-before": [
      "always",
      {
        "except": ["after-declaration", "first-nested"],
        "ignore": ["after-comment", "inside-single-line-block"]
      }
    ],
    "length-zero-no-unit": true,
    "number-max-precision": 3,
    "shorthand-property-no-redundant-values": true,
    "color-hex-length": "short",
    "color-named": "never",
    "font-family-name-quotes": "always-where-recommended",
    "font-weight-notation": "numeric",
    "declaration-block-no-redundant-longhand-properties": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["host"]
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": ["host"]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["composes", "contain"]
      }
    ],
    "media-feature-name-no-unknown": true,
    "media-feature-range-notation": "prefix",
    "comment-empty-line-before": [
      "always",
      {
        "except": ["first-nested"],
        "ignore": ["stylelint-commands"]
      }
    ],
    "declaration-block-no-duplicate-properties": [
      true,
      {
        "ignore": ["consecutive-duplicates-with-different-values"]
      }
    ],
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": ["appearance", "mask", "mask-size", "mask-position", "mask-repeat"]
      }
    ]
  },
  "ignoreFiles": [
    "node_modules/**/*",
    "dist/**/*",
    "**/*.min.css"
  ]
}
