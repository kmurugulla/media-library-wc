{
  "name": "media-library",
  "version": "1.0.0",
  "description": "A browser-based media library web component for scanning and managing website media files",
  "type": "module",
  "main": "dist/media-library.umd.js",
  "module": "dist/media-library.es.js",
  "types": "dist/media-library.d.ts",
  "files": [
    "dist",
    "locales"
  ],
  "exports": {
    ".": {
      "types": "./dist/media-library.d.ts",
      "import": "./dist/media-library.es.js",
      "require": "./dist/media-library.umd.js"
    },
    "./styles": "./dist/style.css",
    "./locales/*": "./locales/*.json"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:assets",
    "build:full": "vite build --mode self-contained && npm run build:assets",
    "build:assets": "node build-dist.js",
    "preview": "vite preview",
    "lint:js": "eslint src",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "eslint src --fix && stylelint \"src/**/*.css\" --fix",
    "clean": "rm -rf node_modules/.vite dist",
    "dev:clean": "npm run clean && npm run dev"
  },
  "keywords": [
    "web-component",
    "media-library",
    "sitemap",
    "media-management",
    "lit",
    "browser-only"
  ],
  "author": "Media Library Team",
  "license": "MIT",
  "dependencies": {
    "exifr": "^7.1.3",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.5",
    "@babel/eslint-parser": "7.24.5",
    "concurrently": "^8.2.2",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.1",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.0",
    "stylelint-scss": "^6.0.0",
    "terser": "^5.44.0",
    "typescript": "^5.0.0",
    "vite": "^4.5.0",
    "vite-plugin-lit-css": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/media-library.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/media-library/issues"
  },
  "homepage": "https://github.com/your-org/media-library#readme"
}
